<script>
  // Get the Sidebar
var mySidebar = document.getElementById("mySidebar");

// Get the DIV with overlay effect
var overlayBg = document.getElementById("myOverlay");

// Toggle between showing and hiding the sidebar, and add overlay effect
function menu_open() {
  if (mySidebar.style.display === 'block') {
    mySidebar.style.display = 'none';
    overlayBg.style.display = "none";
  } else {
    mySidebar.style.display = 'block';
    overlayBg.style.display = "block";
  }
}

// Close the sidebar with the close button
function menu_close() {
  mySidebar.style.display = "none";
  overlayBg.style.display = "none";
}
  
  staff_lock("<%- values.staff %>");
function staff_lock(value){
  var staff = document.getElementsByClassName("staff");
    var i;for (i = 0; i < Object.keys(staff).length; i++) {
    switch (value) {
        
  case "true": staff[i].removeAttribute("readonly");staff[i].style.display ='inline-block'; break;
  case "false": staff[i].style.display = 'none';staff[i].style.position = 'absolute'; break;
      default: staff[i].style.display = 'none';staff[i].style.position = 'absolute';
    }
}
  }
  
</script>
